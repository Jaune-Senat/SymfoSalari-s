{% extends "base.html.twig" %}

{% block title %}Liste des salariés{% endblock %}

{% block  body %} 


{% if editMode %}
    <h1>Modification d'un salarié</h1>
{% else %}
    <h1>Ajout d'un salarié</h1>      
{% endif %}

{{ form_start(formSalarie) }}
    {{ form_row(formSalarie.prenom) }}
    {{ form_row(formSalarie.nom) }}
    {{ form_row(formSalarie.dateNaissance) }}
    {{ form_row(formSalarie.adresse) }}
    {{ form_row(formSalarie.cp) }}
    {{ form_row(formSalarie.ville) }}
    {{ form_row(formSalarie.dateEmbauche) }}
    {{ form_row(formSalarie.entreprise) }}
{{ form_end(formSalarie) }}

<a class="bLink" href="{{path('salaries_index')}}">Retour à la liste des salariés</a>

{% endblock %}